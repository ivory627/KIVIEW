<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="review">
  	<resultMap id="reviewboard" type="ReviewVo">

		<result column="review_no" property="review_no"/>
		<result column="name" property="name"/>
		<result column="avg_score1" property="avg_score1"/>
		<result column="avg_score2" property="avg_score2"/>
		<result column="avg_score3" property="avg_score3"/>
		<result column="review_title" property="review_title"/>
		<result column="review_content" property="review_content"/>
		<result column="review_date" property="review_date"/>

	</resultMap>

	<insert id="reviewList" parameterType="reviewVo" >
		insert into review
		values(review_seq.nextval, #{name}, #{avg_score1}, #{avg_score2}, #{avg_score3}, #{review_title}, #{review_content}, #{review_writer}, sysdate)
	</insert>
	
	<select id="reviewList" resultMap="reviewboard" >
		SELECT name, avg_score1, avg_score2, avg_score3, review_title, review_content, review_writer, sysdate
		FROM review
		ORDER BY review_no DESC
	</select>

  </mapper>